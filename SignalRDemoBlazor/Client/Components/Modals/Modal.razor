@if (_showDialog)
{
    <div class="modal fade show d-block" id="@ModalId" tabindex="-1" role="dialog" @onmousemove="OnDrag" @onmouseup="BackgroundUp" @onmousedown="BackgroundDown">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable @GetModalSize()" role="document" @onmousedown:stopPropagation="true">
            <div class="modal-content position-absolute @SupportsDropdowns()" style="top:@($"{_offsetY}px"); left:@($"{_offsetX}px");">
                <div class="modal-header @DraggableClass()" @onmousedown="TitleMouseDown">
                    <div class="modal-title">
                        @ModalTitle
                    </div>
                    <button type="button" class="close" @onclick="Close" aria-label="Sluiten">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body @SupportsDropdowns()">
                    @ModalBody
                </div>
                @if (ModalFooter != null)
                {
                <div class="modal-footer">
                    @ModalFooter
                </div>
                }
            </div>
        </div>
    </div>
    <div class="modal-backdrop show"></div>
}